<h1 style="text-align: center; margin-bottom: 30px;">アカウント編集</h1>

<div style="display: flex; justify-content: center; align-items: center; min-height: 70vh;">
  <div style="width: 100%; max-width: 400px; padding: 20px; border: 1px solid #ccc; border-radius: 10px; background-color: #f0f8ff;">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field" style="margin-top: 20px; text-align: center;">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div style="margin-top: 10px; color: #555; text-align: center;">
          現在確認待ちのメールアドレス：<%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="field" style="margin-top: 20px; text-align: center;">
        <%= f.label :password, "パスワード" %> <i>(変更しない場合は空欄のまま)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %>文字以上</em>
        <% end %>
      </div>

      <div class="field" style="margin-top: 20px; text-align: center;">
        <%= f.label :password_confirmation, "パスワード（確認）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field" style="margin-top: 20px; text-align: center;">
        <%= f.label :nickname, "ニックネーム" %><br />
        <%= f.text_field :nickname, autocomplete: "nickname", class: "form-control" %>
      </div>

      <div class="field" style="margin-top: 20px; text-align: center;">
        <%= f.label :current_password, "現在のパスワード" %> <i>(変更を保存するには入力が必要です)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions" style="margin-top: 30px; text-align: center;">
        <%= f.submit "更新する", class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3 style="margin-top: 40px; text-align: center;">アカウントを削除する</h3>

    <div style="text-align: center; margin-bottom: 30px;">
      <p>アカウントを削除しますか？</p>
      <%= button_to "アカウントを削除する", registration_path(resource_name), method: :delete, data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
    </div>

    <div style="text-align: center;">
      <%= link_to "戻る", :back, class: "btn btn-secondary" %>
    </div>

  </div>
</div>
