<h1 style="text-align: center; color: #2c3e50; margin-bottom: 1rem;">
  <%= current_user.nickname %>さんのマイページ
</h1>

<h2 style="text-align: center; color: #2980b9; margin-top: 2rem;">
  予約一覧
</h2>

<% if @homes.any? %>
  <table style="width: 90%; max-width: 800px; margin: 0 auto; border-collapse: collapse; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
    <thead>
      <tr style="background-color: #3498db; color: white;">
        <th style="padding: 12px;">予約日時</th>
        <th style="padding: 12px;">Google Meetリンク</th>
        <th style="padding: 12px;">操作</th>
      </tr>
    </thead>
    <tbody>
      <% @homes.each do |home| %>
        <tr style="background-color: #ecf0f1; text-align: center;">
          <td style="padding: 12px;">
            <%= home.start_time.strftime("%Y年%m月%d日 %H:%M") %>
          </td>
          <td style="padding: 12px;">
            <% if home.google_meet_url.present? %>
              <%= link_to "参加する", home.google_meet_url, target: "_blank", rel: "noopener", style: "color: #2980b9; font-weight: bold;" %>
            <% else %>
              <span style="color: #7f8c8d;">未作成</span>
            <% end %>
          </td>
          <td style="padding: 12px;">
            <%= link_to "削除", home_path(home), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                        style: "color: #e74c3c; text-decoration: none; font-weight: bold;" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p style="text-align: center; color: #7f8c8d;">まだ予約はありません。</p>
<% end %>

<div style="text-align: center; margin-top: 2rem;">
  <% if @admin_user %>
    <%= link_to "チャットを開始する", chat_rooms_path(user_id: @admin_user.id), method: :post,
                data: { confirm: "チャットを開始しますか？" },
                class: "btn", style: "padding: 10px 20px; background-color: #2ecc71; color: white; border: none; border-radius: 5px;" %>
    <p style="margin-top: 0.5rem; color: #555;">
      管理者: <%= @admin_user.nickname.presence || @admin_user.email %>
    </p>
  <% else %>
    <p style="color: #e74c3c;">管理者ユーザーが存在しません。</p>
  <% end %>
</div>
<div style="text-align: center; margin-top: 2rem;">
  <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path,
              class: "btn",
              style: "padding: 12px 24px; background-color: #dd4b39; color: white; border-radius: 6px; font-weight: bold; text-decoration: none;" %>
</div>

<%= include_gon %>
